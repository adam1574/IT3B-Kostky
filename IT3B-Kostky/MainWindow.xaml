<Window x:Class="IT3B_Kostky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT3B_Kostky"
        mc:Ignorable="d"
        Title="Dice Roller" Height="350" Width="525">
    <Grid>
        <Button Content="Roll Dice" Width="100" Height="30" Click="RollDice_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="66,10,0,0"/>
        <Canvas Name="DiceCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,50,10,10"/>
        <TextBox Name="HistoryTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,10,10,10" Height="100" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        <Button Content="Save History" Width="100" Height="30" Click="SaveHistory_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="345,10,0,0"/>
    </Grid>
</Window>
